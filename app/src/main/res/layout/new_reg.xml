<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/newbg4"
    android:padding="20dp"
    android:animateLayoutChanges="true"
    tools:context="com.android.womensprotection.app.UserAuthorization.Registration">


<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:scrollIndicators="left"
        android:layout_marginTop="15dp"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Registration"
            android:textColor="#ffe70d"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="First name :"
                android:textColor="#ff3737" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="30dp"
                android:allowUndo="true"
                android:background="@drawable/tf_bg"
                android:id="@+id/name"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Phone number :"
                android:textColor="#ff3737"
                />

            <EditText
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="30dp"
                android:allowUndo="true"
                android:background="@drawable/tf_bg"
                android:id="@+id/ph_number"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Address :"
                android:textColor="#ff3737" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:layout_marginLeft="111dp"
                android:layout_marginTop="30dp"
                android:allowUndo="true"
                android:background="@drawable/tf_bg"
                android:id="@+id/address"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="New User ID :"
                android:textColor="#ff3737" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:layout_marginLeft="87dp"
                android:layout_marginTop="30dp"
                android:allowUndo="true"
                android:background="@drawable/tf_bg"
                android:id="@+id/user_name"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="New password :"
                android:textColor="#ff3737" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:allowUndo="true"
                android:background="@drawable/tf_bg"
                android:id="@+id/new_pw"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Confirm password :"
                android:textColor="#ff3737" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="30dp"
                android:allowUndo="true"
                android:background="@drawable/tf_bg"
                android:id="@+id/confirm_pw"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:background="@drawable/white_butt"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textStyle="bold"
                tools:text="Submit"
                android:id="@+id/Register"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>